@model SocialMediaApp.Models.ApplicationUser

<div class="card">
	<div class="card-header">
		<div class="card-text text-center fw-bold fs-3">
			<i class="bi bi-sliders"></i>
			Editare profil
		</div>
	</div>

	<div class="card-body">
		<div class="d-flex justify-content-center">
			<img class="profile-image" src="@Model.Image" alt="imagine profil">
		</div>
		<form enctype="multipart/form-data" asp-action="Edit" asp-controller="Users">
			<div class="form-group">
				<div class="mb-3">
					<label asp-for="FirstName" class="form-label">Prenume</label>
					<input asp-for="FirstName" class="form-control" placeholder="Introdu prenumele..." />
				</div>

				<div class="mb-3">
					<label asp-for="LastName" class="form-label">Nume</label>
					<input asp-for="LastName" class="form-control" placeholder="Introdu numele..." />
				</div>

				<div class="mb-3">
					<label asp-for="Description" class="form-label">Descriere</label>
					<br />
					<textarea asp-for="Description" maxlength="100" id="userDescription" class="form-control" style="resize: none;" placeholder="Introdu o scurtă descriere" rows="3"></textarea>
					<div class="counter d-flex justify-content-end" style="align-items: end">
						@if (@Model.Description != null)
						{
							<div id="charCounter">
								<span id="charCount">@Model.Description.Length</span> / 100
							</div>
						}
						else
						{
							<div id="charCounter">
								<span id="charCount">0</span> / 100
							</div>
						}
					</div>
				</div>

				<div class="mb-3">
					<label asp-for="UserName" class="form-label">Username</label>
					<input asp-for="UserName" class="form-control" />
				</div>

				<div class="mb-3">
					<label asp-for="Email" class="form-label">Email</label>
					<input asp-for="Email" class="form-control" disabled readonly />
				</div>

				<div class="mb-3">
					<label asp-for="Image">Schimbă fotografia de profil</label>
					<br />
					<input asp-for="Image" class="form-control" type="file" />
				</div>

			</div>

			<div>
				<div>Vizibilitatea profilului</div>
				<div class="mb-3 form-check form-switch">
					<input asp-for="Privacy" class="form-check-input" type="checkbox">
					<label asp-for="Privacy" class="form-check-label">Cont privat</label>
				</div>
			</div>
		


			<div class="d-flex justify-content-center">
				<button class="btn btn-sm btn-success" style="font-size: 1rem;" type="submit">Salvează</button>
			</div>

		</form>
	
	</div>


</div>
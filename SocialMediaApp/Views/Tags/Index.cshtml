﻿@{
	ViewData["Title"] = "Etichete";
}


<div class="fs-3 fw-bold text-center">Etichete disponibile</div>
<hr />


<div class="d-flex justify-content-between">
    <form asp-controller="Posts" asp-action="Index" method="get">
        <button class="btn btn-success" type="submit">
            <i class="bi bi-arrow-left"></i>
            Postări
        </button>
    </form>

    <form asp-asp-controller="Tags" asp-action="New" method="get">
        <button class="btn btn-primary" type="submit">
            <i class="bi bi-plus-square"></i>
            Adaugă 
        </button>

    </form>

</div>


<br />
<br />

<div class="row">
    @foreach (var tag in ViewBag.Tags)
    {
        <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">
                <div class="card-header fw-bold"> <i class="bi bi-bookmark"></i> @tag.Denumire</div>
                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <p><i class="bi bi-calendar2-check"></i> Data creării: @tag.Data.ToString("dd.MM.yyyy, HH:mm")</p>
                        <p>
                            <i class="bi bi-person-circle"></i> 
                            Creată de: 
                            <a href="/Users/Details/@tag.UserId" style="text-decoration: none">
                                @tag.User.FirstName @tag.User.LastName
                            </a> 
                        </p>
                        <p><i class="bi bi-postage-heart-fill"></i>  Număr postări: @tag.PostCount</p>

                    </div>
                    <div class="d-flex flex-row justify-content-between p-3">

                        <div>
                            <a asp-controller="Tags" asp-action="Delete" asp-route-id="@tag.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash3"></i> Șterge</a>
                        </div>

                        <div>
                            <a asp-controller="Tags" asp-action="Show" asp-route-id="@tag.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-eye"></i> Vezi postări</a>
                        </div>

                        @if(@tag.PostCount == 0) 
                        {
                            <div>
                                <a asp-controller="Tags" asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-sm btn-outline-success"><i class="bi bi-pencil-square"></i> Editează</a>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    }

</div>



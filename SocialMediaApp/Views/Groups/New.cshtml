@model SocialMediaApp.Models.Group


<h2 class="text-center mt-5">Creează un nou grup</h2>

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            <form enctype="multipart/form-data" asp-action="New" asp-controller="Groups">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Nume" class="form-label">Nume grup</label>
                    <br />
                    <input asp-for="Nume" class="form-control" />
                    <span asp-validation-for="Nume" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Descriere" class="form-label">Descriere grup</label>
                    <br />
                    <textarea asp-for="Descriere" class="form-control"></textarea>

                    <!-- Mesaj de validare pentru continut -->
                    <span asp-validation-for="Descriere" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Fotografie">Fotografie grup</label>
                    <br />
                    <input asp-for="Fotografie" class="form-control" type="file" />

                    <br />
                </div>
                <br />
                <button class="btn btn-success" type="submit">Creează</button>

            </form>
        </div>
    </div>
</div>

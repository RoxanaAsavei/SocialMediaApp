@model SocialMediaApp.Models.Group


<h2 class="text-center mt-5">Adaugare grup</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            <form method="post" asp-action="New" asp-controller="Groups">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Nume" class="form-label">Nume grup</label>
                    <br />
                    <input asp-for="Nume" class="form-control" />
                    <span asp-validation-for="Nume" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Descriere" class="form-label">Descriere grup</label>
                    <br />
                    <textarea asp-for="Descriere" class="form-control"></textarea>

                    <!-- Mesaj de validare pentru continut -->
                    <span asp-validation-for="Descriere" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Fotografie" class="form-label">Fotografie grup</label>
                    <br />
                    <textarea asp-for="Fotografie" class="form-control"></textarea>

                    <!-- Mesaj de validare pentru continut -->
                    <span asp-validation-for="Fotografie" class="text-danger"></span>

                    <br />
                </div>
                <br />
                <button class="btn btn-success" type="submit">Creeaza</button>

            </form>
        </div>
    </div>
</div>

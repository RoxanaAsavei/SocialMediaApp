@using SocialMediaApp.ViewModels
@model RegisterViewModel

@{

	ViewData["Title"] = "Înregistrare";
	Layout = "_AccountLayout";
}

<div class="account-container">
	<div class="account-box">
		<h2 class="text-center mb-4">Înregistrare</h2>
		<form asp-action="Register" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger">
			</div>
			<div class="d-flex flex-row" style="gap: 20px;">
				<div class="mb-3">
					<label asp-for="FirstName" class="form-label">Prenume</label>
					<input asp-for="FirstName" class="form-control" />
					<span asp-validation-for="FirstName" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="LastName" class="form-label">Nume</label>
					<input asp-for="LastName" class="form-control" />
					<span asp-validation-for="LastName" class="text-danger"></span>
				</div>

			</div>


			<div class="mb-3">
				<label asp-for="Email" class="form-label">Email</label>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="mb-3 d-flex flex-row" style="gap: 20px;">
				<div class="mb-3">
					<label asp-for="Password" class="form-label">Parolă</label>
					<input asp-for="Password" class="form-control" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="ConfirmPassword" class="form-label">Confirmă parola</label>
					<input asp-for="ConfirmPassword" class="form-control" />
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>

			</div>

			<div class="mb-3">
				<label asp-for="Description" class="form-label">Descriere</label>
				<br />
				<textarea asp-for="Description" maxlength="100" id="userDescription" class="form-control" style="resize: none;" placeholder="Introdu o scurtă descriere" rows="3">
				</textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Image">Încarcă o poză de profil</label>
				<input asp-for="Image" class="form-control" type="file" />
				<span asp-validation-for="Image" class="text-danger"></span>
			</div>

			<div>
				<div>Vizibilitatea profilului</div>
				<div class="mb-3 form-check form-switch">
					<input asp-for="Privacy" class="form-check-input" type="checkbox">
					<label asp-for="Privacy" class="form-check-label">Cont privat</label>
				</div>
			</div>

			<input type="submit" value="Creează contul" class="btn btn-primary w-100 p-2" />
			<p class="text-center mt-2">
				Ai deja cont? 
				<a asp-controller="Account" asp-action="Login" class="text-decoration-none">
					Conectează-te
				</a>
			</p>
			<div class="text-center">
				<a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3">Înapoi</a>
			</div>
		</form>
	</div>

</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
	}

}
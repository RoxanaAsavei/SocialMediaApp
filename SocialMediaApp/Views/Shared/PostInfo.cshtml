<div class="mx-auto card w-auto h-auto">
    <div class="card-header button-container">
        <i class="bi bi-person-circle"> <a href="/Users/Details/@Model.User.Id" class="no-underline">@Model.User.UserName</a></i>
        <i class="bi bi-bookmark-fill"> @Model.Tag.Denumire</i>
    </div>
    @if (@Model.Image != null)
    {
        <div class="d-flex justify-content-center">
            <img src=@Model.Image class="card-img-top post-image" alt="imagine atasata">
        </div>
   
    }
    <div class="card-body">
        <p class="card-text" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis;">
            @Html.Raw(Model.Continut)
        </p>
        <hr />
        <div class="d-flex flex-row justify-content-lg-between">
            <div>
                <i class="bi bi-chat-left-text fs-4"></i> 
                @Model.NrComments
            </div>
            
            <div>
                <i class="bi bi-heart fs-4"></i>
                @Model.NrLikes
            </div>
           
        </div>
       
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item"><i class="bi bi-calendar-check-fill"> @Model.Data.ToString("dd.MM.yyyy, HH:mm")</i></li>
        <li class="list-group-item"><i class="bi bi-geo-alt-fill"> @Model.Locatie</i></li>
    </ul>
</div>
